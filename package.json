{
  "name": "package-json-validator",
  "packageManager": "bun@1.1.4",
  "private": true,
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "format-check": "prettier --check",
    "lint": "eslint --quiet --fix ./**/*.ts src/**/*.ts test/**/*.ts",
    "package": "bun build src/main.ts --outdir dist/ --target node --sourcemap=external",
    "pre-commit": "npm run lint && npm run format && npm run package && git add .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ExpediaGroup/package-json-validator.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Dan Adajian",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "6.0.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@swc/jest": "0.2.36",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "eslint": "8.57.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "type-fest": "4.15.0",
    "typescript": "5.4.5"
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "@swc/jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "lib"
    ],
    "clearMocks": true
  }
}
